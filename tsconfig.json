{
  "compilerOptions": {
    "lib": ["esnext", "WebWorker"],
    "checkJs": true,
    "module": "NodeNext",
    "target": "esnext",
    "types": [],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": ["src", "test"]
}
